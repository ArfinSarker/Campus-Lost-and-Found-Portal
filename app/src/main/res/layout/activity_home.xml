<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost &amp; Found"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Campus Verified Tag -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAMPUS VERIFIED • STUDENTS AND STAFF ONLY"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:textAllCaps="true"
            android:layout_marginBottom="24dp"/>

        <!-- Lost Something? Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Something?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We’ll Help You Find It"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A centralized platform for students to report and recover lost items."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Report Buttons side by side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnReportLost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Report Lost Item"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnReportFound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Report Found Item"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Recently Reported Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recently reported"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- RecyclerView for recent items (nested scrolling disabled) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="16dp"/>

        <!-- Browse All Link -->
        <TextView
            android:id="@+id/tvBrowseAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse all items →"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centralized student platform"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>